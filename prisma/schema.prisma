generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  imageUrl     String?
  firstName    String
  lastName     String

  emailAddress String   @unique

  credits      Int      @default(350)
  role         String   @default("Ã©tudiant")
}

model Devices {
  id            String           @id @default(cuid())
  device_key    String           @unique
  name          String
  unit          String
  device_id     String?
  device_name   String?
  address_ip    String

  devices_values Devices_values[] @relation("DeviceValues")
}

model Devices_values {
  id        String   @id @default(cuid())
  device_key String
  value     String
  unit      String
  quality   String
  timestamp DateTime @default(now())

  device Devices @relation("DeviceValues", fields: [device_key], references: [device_key])

  @@index([device_key])
}